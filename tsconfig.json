/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
  "strict": true,
  "strictPropertyInitialization": false,
  "noImplicitOverride": true,
  "noPropertyAccessFromIndexSignature": true,

  "module": "ES2022",
  "moduleResolution": "bundler",
  "target": "ES2022",

  "experimentalDecorators": true,
  "importHelpers": true,
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,

  "skipLibCheck": true,
  "isolatedModules": true,
    "paths": {
      "lib-core": [
        "projects/lib-core/src/public-api.ts"
      ],
      "lib-finanzas": [
        "projects/lib-finanzas/src/public-api.ts"
      ],
      "lib-generales": [
        "projects/lib-generales/src/public-api.ts"
      ],
      "lib-home": [
        "projects/lib-home/src/public-api.ts"
      ],
      "lib-mantenimiento": [
        "projects/lib-mantenimiento/src/public-api.ts"
      ],
      "lib-viajes": [
        "projects/lib-viajes/src/public-api.ts"
      ]
    },
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true,
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./projects/lib-home/tsconfig.lib.json"
    },
    {
      "path": "./projects/lib-home/tsconfig.spec.json"
    },
    {
      "path": "./projects/lib-core/tsconfig.lib.json"
    },
    {
      "path": "./projects/lib-core/tsconfig.spec.json"
    },
    {
      "path": "./projects/lib-viajes/tsconfig.lib.json"
    },
    {
      "path": "./projects/lib-viajes/tsconfig.spec.json"
    },
    {
      "path": "./projects/lib-generales/tsconfig.lib.json"
    },
    {
      "path": "./projects/lib-generales/tsconfig.spec.json"
    },
    {
      "path": "./projects/lib-finanzas/tsconfig.lib.json"
    },
    {
      "path": "./projects/lib-finanzas/tsconfig.spec.json"
    },
    {
      "path": "./projects/lib-mantenimiento/tsconfig.lib.json"
    },
    {
      "path": "./projects/lib-mantenimiento/tsconfig.spec.json"
    }
  ]
}
